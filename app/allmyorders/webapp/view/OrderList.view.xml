<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 	xmlns:sfb="sap.ui.comp.smartfilterbar"
	xmlns:core="sap.ui.core" xmlns:vm="sap.ui.comp.variants" xmlns:sf="sap.ui.layout.form" xmlns:f="sap.f"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:ui="sap.ui.table" controllerName="ordermonitoring.allmyorders.controller.OrderList">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<sfb:SmartFilterBar
					id="smartFilterBar"
					entitySet="Results"
				
					persistencyKey="UniqueAndStablePersistencyKey"/>
					<smartTable:SmartTable id="idSmartTable" entitySet="Results"
			 useExportToExcel="true" rowSelectionChange="onRowSelection"
			useVariantManagement="false" useTablePersonalisation="true" header="All My Orders"
			showRowCount="true" persistencyKey="SmartTableRefApp_Explored"
			enableAutoBinding="false" enableAutoColumnWidth="true" smartFilterId="smartFilterBar" initiallyVisibleFields="SalesOrder"
			
			>
			<smartTable:customToolbar>
<OverflowToolbar design="Auto">
			<ToolbarSpacer />
			<Button  icon="sap-icon://notes" enabled="{localModel>/orderSelected}" text="{i18n>addNote}" press="onAddNewNote"/>
				</OverflowToolbar> 
				</smartTable:customToolbar>
			<!-- layout data used to make the table growing but the filter bar fixed -->
			<smartTable:layoutData>
				<FlexItemData growFactor="1" baseSize="0%" />
			</smartTable:layoutData>
		</smartTable:SmartTable>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>