<mvc:View
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:core="sap.ui.core"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:sf="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:ui="sap.ui.table"
    controllerName="ordermonitoring.allmyorders.controller.OrderList"
    height="100%"
>
    <App id="_IDGenApp1">
        <pages>
            <Page
                id="_IDGenPage1"
                showHeader="false"
                enableScrolling="false"
            >
                <content>
                    <VBox
                        id="_IDGenVBox1"
                        fitContainer="true"
                    >
                        <sfb:SmartFilterBar
                            id="idSmartFilter"
                            entitySet="Results"
                            liveMode="true"
                            showClearOnFB="true"
                            persistencyKey="UniqueAndStablePersistencyKey"
                        >
                            <sfb:controlConfiguration>
                                <sfb:ControlConfiguration
                                    id="idErdatOrder"
                                    key="ERDAT_ORDER_DATE"
                                    visibleInAdvancedArea="true"
                                    conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                                />
                                <sfb:ControlConfiguration
                                    id="idErdatItem"
                                    key="ERDAT_ITEM_DATE"
                                    visibleInAdvancedArea="true"
                                    conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                                />
                                <sfb:ControlConfiguration
                                    id="idEdatuRequested"
                                    key="EDATU_REQUESTED_DATE"
                                    visibleInAdvancedArea="false"
                                    conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                                />
                                <sfb:ControlConfiguration
                                    id="idEdatuConfirmed"
                                    key="EDATU_CONFIRMED_DATE"
                                    visibleInAdvancedArea="false"
                                    conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                                />
                                <sfb:ControlConfiguration
                                    id="idLddat"
                                    key="LDDAT_DATE"
                                    visibleInAdvancedArea="false"
                                    conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                                />
                                <sfb:ControlConfiguration
                                    id="idLfdatDate"
                                    key="LFDAT_DATE"
                                    visibleInAdvancedArea="false"
                                    conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                                />
                               
                            </sfb:controlConfiguration>
                            <sfb:layoutData>
                                <FlexItemData
                                    id="_IDGenFlexItemData1"
                                    shrinkFactor="0"
                                />
                            </sfb:layoutData>
                        </sfb:SmartFilterBar>
                        <smartTable:SmartTable
                            id="idSmartTable"
                            entitySet="Results"
                            tableType="Table"
                            showFullScreenButton="true"
                            useVariantManagement="false"
                            useTablePersonalisation="true"
                            header="{i18n>allOrders}"
                            showRowCount="true"
                            persistencyKey="SmartTableRefApp_Explored"
                            beforeRebindTable="onBeforeRebindTable"
                            enableAutoBinding="true"
                            enableAutoColumnWidth="true"
                            smartFilterId="idSmartFilter"
                        >
                            <smartTable:customToolbar>
                                <OverflowToolbar
                                    id="_IDGenOverflowToolbar1"
                                    design="Auto"
                                >
                                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                                    <Button
                                        id="_IDGenButton1"
                                        icon="sap-icon://notes"
                                        enabled="{localModel>/orderSelected}"
                                        text="{i18n>addNote}"
                                        press="onAddNewNote"
                                    />
                                    <Button
                                        id="idShowDetails"
                                        icon="sap-icon://display-more"
                                        enabled="{localModel>/orderSelected}"
                                        text="{i18n>showDetails}"
                                        press="onShowDetails"
                                    />
                                </OverflowToolbar>
                            </smartTable:customToolbar>
                             <ui:Table id="_IDGenTable1" visibleRowCountMode="Auto">
                              
                                    
                                <ui:layoutData>
                                    <FlexItemData
                                        id="_IDGenFlexItemData4"
                                        growFactor="1"
                                        baseSize="0%"
                                    />
                                </ui:layoutData>
                            </ui:Table>
                            <smartTable:layoutData>
                                <FlexItemData
                                    id="_IDGenFlexItemData2"
                                    growFactor="1"
                                    baseSize="0%"
                                />
                            </smartTable:layoutData>
                        </smartTable:SmartTable>
                    </VBox>
                </content>
                <footer>
            <Toolbar    id="otbFooter">
                <Button id="idMsgManager"
                    icon="sap-icon://alert"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    type="Emphasized"
                    press="onMessagePopoverPress" />
            </Toolbar>
        </footer>
            </Page>
        </pages>
    </App>
</mvc:View>
