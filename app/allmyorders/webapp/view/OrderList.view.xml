<mvc:View
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:core="sap.ui.core"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:sf="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:ui="sap.ui.table"
    controllerName="ordermonitoring.allmyorders.controller.OrderList"
    height="100%"
>
    <f:DynamicPage
        id="dynamicPageId"
        toggleHeaderOnTitleClick="false"
        showFooter="true"
        fitContent="true"
        class="sapUiNoContentPadding"
    >
        <f:content>
            <VBox
                id="_IDGenVBox1"
                width="100%"
                class="sapUiTinyMarginBottom"
                height="105%"
            >
                <sfb:SmartFilterBar
                    id="idSmartFilter"
                    entitySet="Results"
                    liveMode="true"
                    showClearOnFB="true"
                    persistencyKey="UniqueAndStablePersistencyKey"
                >
                    <sfb:controlConfiguration>
                        <sfb:ControlConfiguration
                            id="idErdatOrder"
                            key="ERDAT_ORDER_DATE"
                            visibleInAdvancedArea="true"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                        <sfb:ControlConfiguration
                            id="idErdatItem"
                            key="ERDAT_ITEM_DATE"
                            visibleInAdvancedArea="true"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                        <sfb:ControlConfiguration
                            id="idEdatuRequested"
                            key="EDATU_REQUESTED_DATE"
                            visibleInAdvancedArea="false"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                        <sfb:ControlConfiguration
                            id="idEdatuConfirmed"
                            key="EDATU_CONFIRMED_DATE"
                            visibleInAdvancedArea="false"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                        <sfb:ControlConfiguration
                            id="idLddat"
                            key="LDDAT_DATE"
                            visibleInAdvancedArea="false"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                        <sfb:ControlConfiguration
                            id="idLfdatDate"
                            key="LFDAT_DATE"
                            visibleInAdvancedArea="false"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                    
                    <sfb:ControlConfiguration
                            id="idHSdatDate"
                            key="HSDAT_DATE"
                            visibleInAdvancedArea="false"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                    
                    <sfb:ControlConfiguration
                            id="idVFdatDate"
                            key="VFDAT_DATE"
                            visibleInAdvancedArea="false"
                            conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                        />
                    </sfb:controlConfiguration>
                    <sfb:layoutData>
                        <FlexItemData
                            id="_IDGenFlexItemData1"
                            shrinkFactor="0"
                        />
                    </sfb:layoutData>
                </sfb:SmartFilterBar>
                <MessageStrip
                    showIcon="true"
                    text="{i18n>noFilterSelected}"
                    visible="{localModel>/msgVisible}"
                />
                <smartTable:SmartTable
                    id="idSmartTable"
                    entitySet="Results"
                    tableType="Table"
                    
                    showFullScreenButton="true"
                    useVariantManagement="false"
                    useTablePersonalisation="true"
                    header="{i18n>allOrders}"
                    showRowCount="true"
                    persistencyKey="SmartTableRefApp_Explored"
                    beforeRebindTable="onBeforeRebindTable"
                    enableAutoBinding="true"
                    enableAutoColumnWidth="true"
                    smartFilterId="idSmartFilter"
                    class="sapUiResponsiveMargin"
                >
                    <smartTable:customToolbar>
                        <OverflowToolbar
                            id="_IDGenOverflowToolbar1"
                            design="Auto"
                        >
                            <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            <Button
                                id="_IDGenButton1"
                                icon="sap-icon://notes"
                                enabled="{localModel>/orderSelected}"
                                text="{i18n>addNote}"
                                press="onAddNewNote"
                            />
                            <Button
                                id="idShowDetails"
                                icon="sap-icon://display-more"
                                enabled="{localModel>/orderSelectedSingle}"
                                text="{i18n>showDetails}"
                                press="onShowDetails"
                            />
                            <Button
                                id="idShowAllNotes"
                                icon="sap-icon://detail-more"
                                enabled="{localModel>/orderSelectedSingle}"
                                text="{i18n>showAllNotes}"
                                press="onShowAllNotes"
                            />
                        </OverflowToolbar>
                    </smartTable:customToolbar>
                    <ui:Table
                        id="_IDGenTable1"
                        visibleRowCountMode="Auto"
                        selectionMode="MultiToggle"
                        rowActionCount="1"
                    >
                    <ui:columns>
                                    <ui:Column
                                        id="idBatchNumberCol"
                                        sortProperty="CHARG"
                                        filterProperty="CHARG"
                                        width="7em"
                                        visible="false"
                                        autoResizable="true"
                                    >
                                        <ui:customData>
                                            <core:CustomData
                                                key="p13nData"
                                                value='\{"columnKey": "CHARG", "leadingProperty": "CHARG", "columnIndex": 101,"sortProperty": "CHARG", "filterProperty": "CHARG"}'
                                            />
                                        </ui:customData>
                                        <Label
                                            id="_IDGenLabel1"
                                            text="{i18n>CHARG}"
                                        />
                                        <ui:template>
                                            <Text
                                                id="_IDGenText1"
                                                wrapping="false"
                                                text="{CHARG}"
                                                tooltip="{parts: [
											{value: 'Manuf. Date '},
											{path: 'HSDAT_DATE' },
											{value: ' / '},
											{value: 'SLED/BBD '},
											{path: 'VFDAT_DATE'}
										]
										}"
                                            />
                                        </ui:template>
                                        <ui:layoutData>
                                            <FlexItemData
                                                id="_IDGenFlexItemData3"
                                                growFactor="1"
                                                baseSize="0%"
                                            />
                                        </ui:layoutData>
                                    </ui:Column>
                                </ui:columns>
                        <ui:rowActionTemplate>
                            <ui:RowAction id="_IDGenRowAction1">
                                <ui:items>
                                    <ui:RowActionItem
                                        id="_IDGenRowActionItem1"
                                        type="Navigation"
                                        text="navigations"
                                        press="onRowSelChange"
                                    />
                                </ui:items>
                            </ui:RowAction>
                        </ui:rowActionTemplate>

                        <ui:layoutData>
                            <FlexItemData
                                id="_IDGenFlexItemData4"
                                growFactor="1"
                                baseSize="0%"
                            />
                        </ui:layoutData>
                    </ui:Table>
                    <smartTable:layoutData>
                        <FlexItemData
                            id="_IDGenFlexItemData2"
                            growFactor="1"
                            baseSize="0%"
                        />
                    </smartTable:layoutData>
                </smartTable:SmartTable>
            </VBox>
        </f:content>
        <f:footer>
            <Toolbar
                class="sapUiResponsiveMargin"
                id="otbFooter"
            >
                <Button
                    id="idMsgManager"
                    icon="sap-icon://alert"
                    text="{= ${message>/}.length }"
                    visible="{= ${message>/}.length > 0 }"
                    type="Emphasized"
                    press="onMessagePopoverPress"
                />
            </Toolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
